<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    		{% block header %}
			<div class="container">
				<div class="row">
					<div class="col">
						<nav class="navbar navbar-expand-lg bg-body-tertiary">
							<div class="container-fluid">
								<a class="navbar-brand" href="{{ path('app_home_index') }}">App</a>
								<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
									<span class="navbar-toggler-icon"></span>
								</button>
								<div class="collapse navbar-collapse" id="navbarSupportedContent">
									<ul class="navbar-nav me-auto mb-2 mb-lg-0">
										<li class="nav-item">
											<a class="nav-link active" aria-current="page" href="{{ path('app_home_index') }}">Accueil</a>
										</li>
										<li class="nav-item">
											<a class="nav-link" href="{{ path('app_admin_emprunteur_index') }}">Emprunteur</a>
										</li>
										<li class="nav-item">
											<a class="nav-link" href="{{ path('app_admin_auteur_index') }}">Auteurs</a>
										</li>
										<li class="nav-item">
											<a class="nav-link" href="{{ path('app_admin_genre_index') }}">Genres</a>
										</li>
										<li class="nav-item">
											<a class="nav-link" href="{{ path('app_admin_user_index') }}">Utilisateurs</a>
										</li>
										<li class="nav-item">
											<a class="nav-link" href="{{ path('app_admin_livre_index') }}">Livres</a>
										</li>
										<li class="nav-item">
											<a class="nav-link" href="{{ path('app_admin_emprunt_index') }}">Emprunts</a>
										</li>
									</ul>
									{# {% if app.user %}
										<div class="mb-3">
											Bonjour
											{{ app.user.userIdentifier }},
											<a href="{{ path('app_logout') }}">Déconnexion</a>
										</div>
									{% else %}
										<div>
											<a href="{{ path('app_login') }}">Connexion</a>
										</div>
									{% endif %} #}
								</div>
							</div>
						</nav>
					</div>
				</div>
			</div>
		{% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
